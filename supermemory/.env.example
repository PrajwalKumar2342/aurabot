# Supermemory REST API Server Configuration
# Copy this file to .env and fill in your values

# Supermemory API Key (required)
# Get your API key from: https://supermemory.ai -> Developer Platform -> API Keys
SUPERMEMORY_API_KEY=your_supermemory_api_key_here

# Cerebras API Key (optional, for better LLM responses)
# Get your API key from: https://cloud.cerebras.ai
CEREBRAS_API_KEY=your_cerebras_api_key_here

# LM Studio Configuration (optional, for local LLM)
LM_STUDIO_URL=http://localhost:1234/v1

# Server Configuration
SUPERMEMORY_HOST=localhost
SUPERMEMORY_PORT=8000

# User Configuration
USER_ID=default_user
COLLECTION_NAME=screen_memories
